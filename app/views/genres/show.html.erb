<div class="page-header">
  <h3>Genre #<%= @genre.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @genre.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/genres" class="btn btn-primary">
        Back
      </a>
      <a href="/genres/<%= @genre.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_genre/<%= @genre.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Genre has many gigs -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Gigs
      </li>

      <% @genre.gigs.each do |gig| %>
        <li class="list-group-item">
          <a href="/gigs/<%= gig.id %>">
            <%= gig.client_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/gigs/<%= gig.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/gigs/<%= gig.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_gig/<%= gig.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
