<div class="page-header">
  <h1>
    Genres
    <a href="/genres/new" class="btn btn-lg btn-success">New Genre</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td>
          <a href="/genres/<%= genre.id %>" class="btn btn-primary">Show</a>
          <a href="/genres/<%= genre.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_genre/<%= genre.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @genres, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
