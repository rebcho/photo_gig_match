<div class="page-header">
  <h1>
    Applications
    <a href="/applications/new" class="btn btn-lg btn-success">New Application</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "applications_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :photographer_email_cont, "Photographer email contains" %>
      <%= f.text_field :photographer_email_cont, :class => "form-control", :placeholder => "Photographer email contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/applications" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#applications_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Gig</th>
        <th>Photographer</th>
        <th>Actions</th>
      </tr>

      <% @applications.each do |application| %>
      <tr>
        <td>
          <% if application.gig.present? %>
            <a href="/gigs/<%= application.gig.id %>">
              <%= application.gig.client_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if application.photographer.present? %>
            <a href="/photographers/<%= application.photographer.id %>">
              <%= application.photographer.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/applications/<%= application.id %>" class="btn btn-primary">Show</a>
          <a href="/applications/<%= application.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_application/<%= application.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @applications, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
