<!-- Validation failure messages -->
<% if @application.errors.any? %>
  <% @application.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Application #<%= @application.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_application/<%= @application.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for gig_id -->
      <div class="form-group">
        <label for="gig_id" class="control-label">
          Gig
        </label>

        <%= select_tag(:gig_id, options_from_collection_for_select(Gig.all, :id, :client_id, @application.gig_id), :class => "form-control") %>
      </div>

      <!-- Label and input for photographer_id -->
      <div class="form-group">
        <label for="photographer_id" class="control-label">
          Photographer
        </label>

        <%= select_tag(:photographer_id, options_from_collection_for_select(Photographer.all, :id, :email, @application.photographer_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Application
      </button>
      or
      <a href="/applications/<%= @application.id %>">Cancel</a>
    </form>
  </div>
</div>
