<div class="page-header">
  <h1>
    Gigs
    <a href="/gigs/new" class="btn btn-lg btn-success">New Gig</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "gigs_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :time_commitment_cont, "Time commitment contains" %>
    <%= f.text_field :time_commitment_cont, :class => "form-control", :placeholder => "Time commitment contains" %>
  </div>

<div class="form-group">
    <%= f.label :budget_cont, "Budget contains" %>
    <%= f.text_field :budget_cont, :class => "form-control", :placeholder => "Budget contains" %>
  </div>

<div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

<div class="form-group">
    <%= f.label :title_cont, "Title contains" %>
    <%= f.text_field :title_cont, :class => "form-control", :placeholder => "Title contains" %>
  </div>

<div class="form-group">
  <%= f.label :location_id, "Location" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :location_id_gteq, :class => "form-control", :placeholder => "Location greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :location_id_lteq, :class => "form-control", :placeholder => "Location less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "Client Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='clientgteqcreated_atPicker'>
                  <%= f.text_field :client_created_at_gteq, :class => "form-control", :placeholder => "Client Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='clientlteqcreated_atPicker'>
                  <%= f.text_field :client_created_at_lteq, :class => "form-control", :placeholder => "Client Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#clientgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#clientlteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#clientgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#clientlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#clientlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#clientgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
      <%= f.label :project_type_name_cont, "Genre name contains" %>
      <%= f.text_field :project_type_name_cont, :class => "form-control", :placeholder => "Genre name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/gigs" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#gigs_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Client</th>
        <th>Location</th>
        <th>Title</th>
        <th>Description</th>
        <th>Budget</th>
        <th>Time commitment</th>
        <th>Genre</th>
        <th>Sample images</th>
        <th>Actions</th>
      </tr>

      <% @gigs.each do |gig| %>
      <tr>
        <td>
          <% if gig.client.present? %>
            <a href="/clients/<%= gig.client.id %>">
              <%= gig.client.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= gig.location_id %></td>
        <td><%= gig.title %></td>
        <td><%= gig.description %></td>
        <td><%= gig.budget %></td>
        <td><%= gig.time_commitment %></td>
        <td>
          <% if gig.project_type.present? %>
            <a href="/genres/<%= gig.project_type.id %>">
              <%= gig.project_type.name %>
            </a>
          <% end %>
        </td>
        <td><img src='<%= gig.sample_images %>' class='img-responsive'></td>
        <td>
          <a href="/gigs/<%= gig.id %>" class="btn btn-primary">Show</a>
          <a href="/gigs/<%= gig.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_gig/<%= gig.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @gigs, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
